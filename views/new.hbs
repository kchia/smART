<form action="/tutorials" method="POST">

    <div class="form-row">
        <div class="subrow">
            <label for="title">Title</label>
            <input type="text" name="title" id="title">
            <label for="subtitle">Subtitle</label>
            <input type="text" name="subtitle" id="subtitle">
        </div>
    </div>

    <div class="form-row tut-row">

        <div class="supply-form">
            <h3>Supplies</h3>
            <textarea name="supplies" rows="12" placeholder="Separate line for each item"></textarea>
            <div></div>
            <h3>Optional</h3>
            <textarea name="optional" rows="6" placeholder="Separate line for each item"></textarea>
        </div>

        <div class="steps-form">
            <h3>Steps</h3>
            <textarea name="steps" rows="25"
                placeholder="+ Use a plus followed by a space at the start of each new step."></textarea>
        </div>

    </div>

    <input type="submit" value="Submit">

</form>