<form action="/" method="POST">

    <fieldset>
        <label for="title">Title</label>
        <input type="text" name="title" value="{{title}}">
    </fieldset>
    <fieldset>
        <label for="subtitle">Subtitle</label>
        <input type="text" name="subtitle" value="{{subtitle}}">
    </fieldset>

    <fieldset class="supplies">
        <h3>Supplies</h3>
        <textarea name="supplies" cols="30" rows="10">{{#each supplies}}{{this}}
            {{/each}}
        </textarea>
        <h3>Optional</h3>
        <textarea name="optional" cols="30" rows="10">{{#each optional}}{{this}}
            {{/each}}
        </textarea>
    </fieldset>

    <fieldset class="steps">
        <h3>Steps</h3>
        <textarea name="steps" cols="80" rows="30">{{#each steps}}-{{this}}
            {{/each}}
        </textarea>
    </fieldset>

    <input type="button" type="submit" value="Submit">

</form>