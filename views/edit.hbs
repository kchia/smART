<form action="/tutorials/{{id}}?_method=put" method="POST">

    <div class="form-row">
        <div class="subrow">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="{{title}}">
            <label for="subtitle">Subtitle</label>
            <input type="text" id="subtitle" name="subtitle" value="{{subtitle}}">
        </div>
    </div>

    <div class="form-row tut-row">

        <div class="supply-form">
            <h3>Supplies</h3>
            <textarea name="supplies" rows="12" placeholder="Separate line for each item">{{#each supplies}}{{this}}
            {{/each~}}
        </textarea>
            <div></div>
            <h3>Optional</h3>
            <textarea name="optional" rows="6" placeholder="Separate line for each item">{{#each optional}}{{this}}
            {{/each~}}
        </textarea>
        </div>

        <div class="steps-form">
            <h3>Steps</h3>
            <textarea name="steps" rows="25"
                placeholder="+ Use a plus followed by a space at the start of each new step.">{{#each steps}}+ {{this}}
                {{/each~}}
                </textarea>
        </div>

    </div>

    <input type="submit" value="Submit" id="submit">

</form>
<form class="delete" action="/tutorials/{{id}}?_method=delete" method="POST">
    <input type="submit" value="Delete">
</form>